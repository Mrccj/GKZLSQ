/* pages/Attendance_record/Attendance_record.wxss */

.ba_img{
  width: 750rpx;
  height: 180rpx;
background-repeat: no-repeat;
background-size: 100% 100%;
display: block;
position: relative;
margin-bottom: 126rpx;
}
.box{
  width: 686rpx;
  height: 200rpx;
  background: #fff;
  position: absolute;
  z-index: 2;
  left: 32rpx;
  bottom: -100rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0px 0px 5px #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box_div{
  width: 33.3%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.name{
width: 100%;
text-align: center;
font-size: 24rpx;
color: #555;
margin-bottom: 20rpx;
}
.day{
width: 100%;
text-align: center;
font-size: 28rpx;
color: #333;

}
.xian{
  width: 1px;
  height: 120rpx;
  background: #eee;
}
.box_one{
  width: 686rpx;
  margin: 0 auto;
  height: auto;
  overflow: hidden;
  box-shadow: 0px 0px 5px #ddd;
   border-radius: 15rpx;
   margin-bottom: 30rpx;
}
.tltle_box{
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title_div{
   display: flex;
  justify-content: center;
  align-items: center;
}
.title_time{
  font-size: 28rpx;
  color: #555;
  margin-right: 10rpx;
}
.title_img{
  width: 20rpx;
  height: 20rpx;
  display: block;
}
.content{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F5F4F9;
  position: relative;
}
.content_left{
  font-size: 28rpx;
  color: #555;
}
.list_box{
  height: 500rpx;
overflow: hidden;
}
.list_auto{
  height: auto;
}

.more{
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
